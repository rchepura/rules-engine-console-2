extends layout

head
    title= title

block content

    body
        #center_spinner(style="position:fixed; top:50%; left:50%")
        

        .iapprove-header
            .col-xs-10
                img(src="images/assets/navigation/logo_elc.png")
                .title-1 iapprove App Administrator
            .col-xs-2
                a#id-iapprove-signout.title-1(href="#/logout") Sign out

        #id-iapprove-login.wrapper-login
            .content-form-login
                .col-sm-2 &nbsp;
                .col-sm-8
                    #content-login-div.div-form
                        form.form-horizontal(role="form",  onsubmit="return false;")
                            h4.signin-title Sign in
                            hr
                            br
                            br
                            .form-group
                                label.col-sm-4.control-label(for="emailId") Username
                                .col-sm-6(style="padding: 0px;")
                                    input#emailId.form-control(type="text", name="emailId", value="")
                                .col-sm-2 &nbsp;
                            .form-group
                                label.col-sm-4.control-label(for="passwordId") Password
                                .col-sm-6(style="padding: 0px;")
                                    input#passwordId.form-control(type="password", name="")
                                .col-sm-2 &nbsp;
                            .form-group
                                .col-sm-12
                                    p.error-message error
                                    button#btnLogin.btn.btn-default(type="submit", style="text-transform: uppercase;") Sign in
                                .col-sm-12.hidden
                                    p Forgot your password?
                                        span.click-here Click here

        .iapprove-wrapper
            .main-tabs-container
                .main-tab-box
                    #id-tab-users.main-tab.active
                        span.magnet-tab USERS
                    #id-tab-groups.main-tab(style="left: 164px;")
                        span.magnet-tab GROUPS
                    #id-tab-configuration.main-tab(style="left: 328px;")
                        span.magnet-tab CONFIGURATION
                    #id-tab-report.main-tab(style="left: 492px;")
                        span.magnet-tab REPORT

            #id-content-users.main-contents-container.active
                .main-content.container
                    .row.tab-buttons
                        .col-xs-1(style="padding: 0;")
                            button#id-add-new-user.btn.btn-default(type="button") + New
                        .col-xs-3
                            button#id-default-user-icon.btn.btn-default(type="button")
                                img.user-icon(src="images/assets/misc/profile_default.png")
                                | Default user picture
                        .col-xs-6
                            form(onsubmit="return false;")
                                .col-xs-8.row-field(style="padding: 0;")
                                    span.icon-search
                                    input#id-search-users.form-control(type="text", name="modal-search-users", value="", placeholder="Search Users")
                                    span.icon-search-reset x
                                .col-xs-4.row-label
                                    button#id-search-users-btn-search.btn.btn-default(type="submit") Search
                        .col-xs-2.text-right
                            button.js-download-report.btn.btn-default(type="button") Export to Excel

                    .row.users-row.header-row
                        .col-xs-2.user-cell.sort-by-name(data-id="firstName") First Name
                            span.arrow-sort-dn
                        .col-xs-2.user-cell.sort-by-name(data-id="lastName") Last Name
                            span.arrow-sort-dn
                        .col-xs-2.user-cell.sort-by-name(data-id="email") Email Address
                            span.arrow-sort-dn
                        .col-xs-1.user-cell.sort-by-name(data-id="region", style="padding: 0px;") Location
                            span.arrow-sort-dn
                        .col-xs-1.user-cell.sort-by-name(data-id="role") Role
                            span.arrow-sort-dn
                        .col-xs-1.user-cell.text-center.sort-by-name(data-id="status", style="padding: 0px;") Has Used
                            span.arrow-sort-dn
                        .col-xs-1.user-cell.text-center.sort-by-user-password(style="padding: 0px;") Password
                            span.arrow-sort-dn
                        .col-xs-2.user-cell.text-center User Picture
                    .content-users-list

            #id-content-groups.main-contents-container
                .main-content.container
                    .row.tab-buttons
                        .col-xs-3
                            button#id-new-group.btn.btn-default.add-rule(type="button") + New
                        .col-xs-6
                            form(onsubmit="return false;")
                                .col-xs-8.row-field(style="padding: 0;")
                                    span.icon-search
                                    input#id-search-groups.form-control(type="text", name="modal-search-users", value="", placeholder="Search Groups")
                                    span.icon-search-reset x
                                .col-xs-4.row-label
                                    button#id-search-groups-btn-search.btn.btn-default(type="submit") Search
                        .col-xs-3 &nbsp;
                    .tab-header-row.container
                        .col-xs-2.head-text Date Added
                        .col-xs-3.head-text Group Name
                        .col-xs-7.head-text Description
                    .content-rule-list.container

            #id-content-configuration.main-contents-container
                .main-content.container
                    .row.tab-buttons
                        .col-xs-3
                            //button#id-new-configuration.btn.btn-default.add-user(type="button") + New
                        .col-xs-6
                            form(onsubmit="return false;")
                                .col-xs-8.row-field(style="padding: 0;")
                                    span.icon-search
                                    input#id-search-configuration.form-control(type="text", name="modal-search-users", value="", placeholder="Search")
                                    span.icon-search-reset x
                                .col-xs-4.row-label
                                    button#id-search-configuration-btn-search.btn.btn-default(type="submit") Search
                        .col-xs-3 &nbsp;
                    .tab-header-row.container
                        .col-xs-2.head-text Date Added
                        .col-xs-3.head-text Name
                        .col-xs-7.head-text Description
                    .content-user-list.container

            #id-content-report.main-contents-container
                .main-content.container
                    .row.tab-buttons
                        .col-xs-3
                            //button#id-new-report.btn.btn-default.add-user(type="button") + New
                        .col-xs-6
                            form(onsubmit="return false;")
                                .col-xs-8.row-field(style="padding: 0;")
                                    span.icon-search
                                    input#id-search-report.form-control(type="text", name="modal-search-users", value="", placeholder="Search")
                                    span.icon-search-reset x
                                .col-xs-4.row-label
                                    button#id-search-report-btn-search.btn.btn-default(type="submit") Search
                        .col-xs-3 &nbsp;
                    .tab-header-row.container
                        .col-xs-2.head-text Date Added
                        .col-xs-3.head-text User Name
                        .col-xs-7.head-text Description
                    .content-user-list.container

        #confirm-alert.modal.fade(tabindex="-1", role="dialog", aria-labelledby="confirm-alert-label", aria-hidden="true")
            .modal-dialog
                .modal-content
                    .modal-header
                        h4#confirm-alert-label.modal-title are you sure?
                    .modal-body.clearfix
                    .modal-footer
                        button.btn.btn-default.yes(data-dismiss="modal", style="margin-right: 20px;", type="button") Confirm
                        button.btn.btn-default.no(data-dismiss="modal", aria-hidden="true", type="button") Cancel

        #error-alert.modal.fade
            .modal-dialog
                .modal-content
                    .modal-header
                        h4.modal-title Error
                    .modal-body.clearfix
                        p 
                    .modal-footer
                        button.btn.btn-default.no(data-dismiss="modal", type="button") Ok

        #general-alert.modal.fade
            .modal-dialog
                .modal-content
                    .modal-header
                        h4.modal-title 
                    .modal-body.clearfix
                        p
                    .modal-footer
                        button.btn.btn-default.no(data-dismiss="modal", type="button") Ok

        form(enctype="multipart/form-data", method="post", style="display: none; width: 0; height: 0;", onsubmit="return false;")
            input#topicIcon(type="file", name="topicIcon", style="display: none;")

        iframe#downloadFrame(width="0", height="0", name="downloadFrame", style="display: none;")

        script(data-main="js/iapprove" src="js/libs/require.js")
