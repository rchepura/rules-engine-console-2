body {
    padding: 0;
    margin: 0; /* bottom = footer height */
}

a {
    color: #0069FF
}

.arrow-sort {
    background: url('../images/assets/arrow_sort.png') no-repeat 0 0 transparent;
    display: inline-block;
    width: 12px;
    height: 8px;
    cursor: pointer;
    margin-left: 12px;
}

.btn-default:hover, .btn-default:focus, .btn-default.focus, .btn-default:active, .btn-default.active {
    background-color: transparent;
}

.modal-backdrop {
    background-color: #fff;
}

#confirm-alert {
    .modal-content {
        background: #eee none repeat scroll 0 0;
        border: 1px solid #4b4b4b;
        .modal-header, .modal-footer {
            border: none;
            text-align: center;
            padding: 30px 0px 10px;
            letter-spacing: 0.5px;
        }
        .modal-footer {
            margin-bottom: 20px;
        }
        .modal-body {
            padding: 0;
        }
        button.btn.btn-default {
            font-size: 16px;
            padding: 4px 20px;
        }
        button.btn.btn-default.yes {
            color: #C40001;
            border: 2px solid #c40001;
        }
        button.btn.btn-default.no {
            color: #fff;
            border: none;
            background-color: #5DA0F7;
        }
    }
}

.estee-header {
    height: 85px;
    
    
    /* Permalink - use to edit and share this gradient: http://colorzilla.com/gradient-editor/#01224e+0,0d101c+30 */
background: #01224e; /* Old browsers */
background: -moz-linear-gradient(left,  #01224e 0%, #0d101c 30%); /* FF3.6+ */
background: -webkit-gradient(linear, left top, right top, color-stop(0%,#01224e), color-stop(30%,#0d101c)); /* Chrome,Safari4+ */
background: -webkit-linear-gradient(left,  #01224e 0%,#0d101c 30%); /* Chrome10+,Safari5.1+ */
background: -o-linear-gradient(left,  #01224e 0%,#0d101c 30%); /* Opera 11.10+ */
background: -ms-linear-gradient(left,  #01224e 0%,#0d101c 30%); /* IE10+ */
background: linear-gradient(to right,  #01224e 0%,#0d101c 30%); /* W3C */
    
    
    > div:first-child {
        height: 100%;
        line-height: 85px;
        margin: 0;
        padding: 0;
        text-align: center;
    }
    .title-1 {
        color: #fff;
        font-size: 16px;
        line-height: 85px;
        letter-spacing: 0.75px;
        font-weight: 300;
    }
    .title-1.text-bold {
        font-weight: 500;
    }
    #id-estee-signout {
        cursor: pointer;
        color: #3278BC;
    }
}

/* ******** Login Page Start ******** */
.wrapper-login {
    display: none;
    background-color: rgba(0, 0, 0, 0.05);
    height: 100%;
    left: 0;
    position: absolute;
    top: 0;
    width: 100%;    
    .row {
        padding: 0;
    }
    .login {
      background: none;
      min-height: 768px;
      padding: 0;
      width: 100%;
    }

    #header {
      width: 100%;
      min-height: 50px;
      background: #B51419;
      text-align: center;
    }
    #header img {
      width: 110px;
      margin-top: 12px;
      margin-right: 15px;
    }
    #header h1.gm-title {
      line-height: 60px;
    }

    h4.magnet-title {
      color: #ffffff;
      font-weight: 100;
      text-transform: uppercase;
      letter-spacing: 1.5px;
      margin-top: 15px;
    }

    h1.gm-title  {
      color: #6199d8;
    }

    #content-register-div, #content-register-confirm-div {
        display: none;
    }

    #content-register-div label {
        font-weight: 100;
    }

    #content-register-div input {
        width: 100%;
    }

    p.error-message {
        color: red;
        display: none;
    }
    
    .div-form {
        color: #323232;
        border: none;
        border-radius: 10px;
        margin: 165px auto 0;
        padding: 5px 10px;
        width: 526px;
        height: 324px;
        text-align: center;
        /*background: url(../images/assets/bg_window.png) no-repeat 0 0 transparent;*/
        hr {
            border-color: #afafaf;
            margin-top: 10px;
        }
        label {
            font-weight: 300;
            letter-spacing: 0.6px;
        }
        input {
            border: 1px solid #8b8b8b;
            height: 32px;
            text-align: left;
            background: transparent;
        }
        button {
            letter-spacing: 1px;
            padding: 7px 85px;
            text-transform: uppercase;
            margin-top: 20px;
            background: transparent;
        }

        p {
            font-weight: 300;
            margin-top: 20px;
        }

        span.click-here {
            margin-left: 7px;
            text-decoration: underline;
            cursor: pointer;
        }
        button#btnRegister {
          background-color: #c98d3f;
          border: 2px solid #95928b;
          color: #35240a;
        }

        button#btnRegCancel {
            background: none;
            border: 2px solid #cccccc;
            color: #000000;
        } 
        .signin-title {
            color: #000;
            font-weight: 400;
            letter-spacing: 1px;
            text-align: left;
            margin-left: 5px;
        }
    }
    
}
/* ******** Login Page End ******** */

.estee-wrapper {
    display: none;
    .title-2 {
        font-size: 16px;
        font-weight: 600;
        text-transform: uppercase;
    }
    .main-tabs-container {
        height: 55px;
        background-color: #EDECED;
        .main-tab-box {
            margin: 0 auto;
            position: relative;
            width: 800px;
            .main-tab {
                background-color: #DEDEDE;
/*                border-left: 1px solid #afafaf;
                border-right: 1px solid #afafaf;
                border-top: 1px solid #afafaf;*/
                border: none;
                border-top-left-radius: 6px;
                border-top-right-radius: 4px;
                cursor: pointer;
                font-size: 18px;
                color: #888888;
                font-weight: 300;
                letter-spacing: 1px;
                line-height: 36px;
                position: absolute;
                text-align: center;
                transform: perspective(40px) rotateX(5deg);
                width: 200px;
                top: 18px;
                z-index: 17;
                > div {transform: perspective(40px) rotateX(-5deg);}
            }
            .main-tab.active {
		border-bottom: 1px solid #fff;
                background-color: #fff;
                color: #000;
                font-weight: 600;
                z-index: 18;
                padding-top: 0;
                cursor: default;
            }
        }
    }
    .main-contents-conttainer {
        /*width: 1280px;*/
        height: 660px;
        margin: 0 auto;
        .main-content {
            display: none;
            width: 1000px;
            height: 100%;
            margin: 0 auto;
        }
        .main-content.active {
            display: block;
        }
        #id-content-topics {
            .new-topic {display: none;}
            #id-update-topics.active {color: red;}
            .row.topics-buttons {
                line-height: 80px;
                text-align: center;
                button {
                    color: #7fadca;
                    font-size: 16px;
                    height: 38px;
                    .topic-icon {
                        margin-right: 10px;
                        width: 30px;
                        height: 30px;
                    }
                }
                button:hover,
                button:active {
                    color: #005d95;
                }
            }
            .row.topics-row {
                border-bottom: 1px solid #005b95;
                /*line-height: 50px;*/
                > div {
                    height: 48px;
                    line-height: 48px;
                    /*overflow: hidden;*/
                    /*text-overflow: ellipsis;*/
                    white-space: nowrap;
                    div {
                        line-height: normal;
                    }
                }
                font-size: 15px;
                color: #5b5b5b;
                .topic-checkbox, .topic-checkbox-new, .all-checkboxes {
                    background: url("../images/assets/checkbox_off.png") no-repeat 0 0 transparent;
                    display: inline-block;
                    width: 16px;
                    height: 16px;
                    cursor: pointer;
                    margin-top: 17px;
                }
                .topic-checkbox.active, .topic-checkbox-new.active, .all-checkboxes.active {
                    background-image: url('../images/assets/checkbox_on.png');
                }
                .topic-icon {
                    float: left;
                    margin-top: 8px;
                    width: 30px;
                    height: 30px;
                }
                .topic-sel-icon {
                    background: url('../images/assets/btn_file_normal.png') no-repeat 0 0 transparent;
                    display: inline-block;
                    width: 51px;
                    height: 39px;
                    margin-top: 5px;
                    margin-left: 15px;
                    cursor: pointer;
                }
                .topic-sel-icon:hover {
                    background: url('../images/assets/btn_file_rollover.png') no-repeat 0 0 transparent;
                }
                .topic-sel-icon:active {
                    background: url('../images/assets/btn_file_click.png') no-repeat 0 0 transparent;
                }
                input {
                    display: inline-block;
                    text-align: left;
                    border: 2px solid #ffaaaa;
                    border-radius: 4px;
                    margin-top: 7px;
                }
                .form-control[disabled], .form-control[readonly], fieldset[disabled] .form-control {
                    background-color: transparent;
                    cursor: default;
                    border: none;
                }
            }
        }
        
        #id-content-articles {
            .row.header-row {
                line-height: 40px;
                margin: 20px 0 0;
            }
            .row.articles-row {
                border-bottom: 1px solid #BDCDD5;
                border-top: 1px solid #BDCDD5;
                > div {
                    color: #5b5b5b;
                    font-size: 14px;
                    line-height: 36px;
                }
                .articles-box {
                    display: none;
                    margin: 0;
                    padding: 0;
                    .row.articles-row-sub {
                        margin: 0;
                        padding: 0;                        
                        border-top: 1px solid #BDCDD5;
                         > div {
                            color: #5b5b5b;
                            font-size: 14px;
                            line-height: 36px;
                            padding: 0;
                        }
                        .img-col {
                            width: 150px;
                        }
                        .content-col {
                            width: 770px;
                            height: 95px;
                        }
                        img, iframe {
                            margin-top: 10px;
                            width: 130px;
                        }
                        h5 {
                            overflow: hidden;
                            text-overflow: ellipsis;
                            white-space: nowrap;
                            width: 740px;
                        }
                    }
                }
                .arrow-expand {
                    background: transparent url("../images/assets/arrow_expand.png") no-repeat scroll 0 0;
                    cursor: pointer;
                    display: inline-block;
                    height: 9px;
                    margin-left: 12px;
                    width: 16px;
                }
            }
            .row.articles-row.active {
                > div:first-child,
                > div.articles-row-collaps {
                    background-color: #F4F3F4;
                }
                .articles-box {
                    /*display: block;*/
                }
                .arrow-expand {
                    background: transparent url("../images/assets/arrow_expand_up.png") no-repeat scroll 0 0;
                }
            }
        }
        
        #id-content-settings {
            .settings-row {
                margin-top: 50px;
                .settings-coll-1 > div {
                    margin-top: -12px;
                }
                .title-2 {
                    text-align: right;
                }
                .settings-coll-2 {
                    border-top: 1px solid #bdcdd5;
                    padding-top: 15px;
                    padding-left: 50px;
                    > div.row {
                        margin-top: 15px;
                        span {
                            display: inline-block;
                            left: -185px;
                            line-height: 34px;
                            position: absolute;
                            text-align: right;
                            width: 150px;
                        }
                    }
                    input {
                        display: inline-block;
                        text-align: left;
                        border: 2px solid #ECEBEB;
                        border-radius: 4px;
                    }
                    button {
                        border: 2px solid #ecebeb;
                        color: #888;
                        font-size: 16px;
                        height: 35px;
                        padding: 4px 15px;
                    }
                    button:hover,
                    button:active {
                        color: #005d95;
                    }
                }
            }
        }
        #id-content-statistics {
            .statistics-row {
                margin-top: 20px;
                margin-bottom: 20px;
                .statistics-coll-1 > div {
                    margin-top: -12px;
                }
                .title-2 {
                    text-align: right;
                }
                a {
                    float: right;
                }
                .statistics-coll-2 {
                    border-top: 1px solid #bdcdd5;
                    padding-top: 15px;
                    padding-left: 50px;
                    margin-bottom: 20px;
                    div.row.gray-row > div {
                        background-color: #F2F2F2;
                    }
                    .categories-list .row, .usage-list .row, .device-list .row, .search-list .row {
                        .row-cell {
                            height: 40px;
                            line-height: 40px;
                            img {
                                height: 30px;
                                margin-right: 10px;
                                width: 30px;
                            }
                            span {
                                background-color: #fff;
                                display: inline-block;
                                float: right;
                                height: 100%;
                                width: 10px;
                            }
                        }
                    }
                    .danger-zone {
                        color: #C40001;
                        button {
                            color: #C40001;
                            border: 2px solid #c40001;
                            margin-right: 15px;
                        }
                    }
                }
            }
        }
    }
}


